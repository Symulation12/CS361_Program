doctype html
html
  head
    title= title
    //Pure css setup
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(rel="stylesheet" href="https://unpkg.com/purecss@2.0.5/build/pure-min.css" integrity="sha384-LTIDeidl25h2dPxrB2Ekgc9c7sEC3CWGM6HeFmuDNUjX76Ert4Z4IY714dhZHPLd" crossorigin="anonymous")
    link(rel="stylesheet" href="/stylesheets/sidebar.css")
    script(src="/javascripts/ui.js")
    script(src="/javascripts/siteFunctions.js")
  body
    block content
      #layout 
            a.menu-link#menuLink(href="#menu")
                span 
            #menu 
                .pure-menu 
                    a.pure-menu-heading(href="/article") Back to articles
                      
                        

                    block sidebar
                        ul.pure-menu-list 
                            li.pure-menu-item
                                a.pure-menu-link(href=`/settings`) Appearance
                            li.pure-menu-item
                                a.pure-menu-link(href=`/settings`) Manage Sources
                            li.pure-menu-item
                                a.pure-menu-link(href=`/settings`) Advanced
      
            #main
                .content 
                    h1.header Settings
                    h2 Appearance 
                    input(type="checkbox" name="darkmode")
                    label(for="darkmode") Dark Mode
                    
                    h2 Manage Sources 
                    input(type="checkbox" name="s1")
                    label(for="s1") Source 1
                    h2 Advanced
                    input(type="checkbox" name="del")
                    label(for="del") Delete all sources

